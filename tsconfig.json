{
  "include": ["src"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
